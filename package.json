{
  "name": "ms-sticker-generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node server.js",
    "dev:vite": "vite",
    "build": "tsc -b && vite build",
    "build:ts": "tsc -b",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --max-warnings=50",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "start": "node server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run",
    "precommit": "npm run lint && npm run typecheck && npm run test:ci && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.35.0",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "html2canvas": "^1.4.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.3",
    "openai": "^5.19.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-webcam": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^15.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.0.0",
    "msw": "^1.2.1",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "whatwg-fetch": "^3.6.2"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{css,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
